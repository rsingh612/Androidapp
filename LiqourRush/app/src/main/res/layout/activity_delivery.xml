<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_delivery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teamosiris.liquorrush.Delivery">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_alignParentTop="true">

        <TextView
            android:text="OrderId: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_weight="1"
            android:textColor="@color/colorBlack" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deliveryOrderId"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:gravity="center" />

        <TextView
            android:text="Customer Name:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:layout_weight="1"
            android:textColor="@color/colorBlack" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deliveryCustomer"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:gravity="center" />

        <TextView
            android:text="Delivery Address:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_weight="1"
            android:textColor="@color/colorBlack" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deliveryAddress"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:gravity="center" />

        <TextView
            android:text="Verify License No."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:layout_weight="1"
            android:textColor="@color/colorBlack" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|number"
            android:ems="10"
            android:id="@+id/deliveryLnoVerify"
            android:layout_weight="0.21"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical|center" />

        <Button
            android:text="Verify Licence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deliveryVerify"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
